rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Users can only read and write their own data
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;

      // Saved chat history is private to the user
      match /permanent_chats/{chatId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }

    // Temporary session-based chats
    match /temporary_chats/{sessionId} {
      allow read, write: if request.auth != null; // Allow any authenticated user to read/write
    }
  }
}